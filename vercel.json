{
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    }
  ],
  "redirects": [
    { "source": "/waitlist", "destination": "/waitlist.html", "permanent": true },
    { "source": "/privacy", "destination": "/privacy.html", "permanent": true },
    { "source": "/terms", "destination": "/terms.html", "permanent": true },
    { "source": "/cookies", "destination": "/cookies.html", "permanent": true },
    { "source": "/contact", "destination": "/contact.html", "permanent": true },
    { "source": "/niveles", "destination": "/niveles.html", "permanent": true },
    { "source": "/form", "destination": "/form.html", "permanent": true }
  ]
}
